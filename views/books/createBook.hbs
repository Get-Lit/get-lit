<div id="add-book-div">
    <div class="search-div">
        <form action="/books/search" method="GET">
            <input type="text" class="form-control" name="title" placeholder="Title" required="required">
            <input type="text" class="form-control" name="author" placeholder="Author"></textarea>
            <button type="submit" class="btn btn-lg btn-block">SEARCH BOOK</button>
        </form>
    </div>
</div>
{{#if books}}
    <div class="row d-flex justify-content-around m-4" id="books-found">
        {{#each books as |book|}}
            <div class="card book-card">
                <img class="card-img-top" src="{{#with volumeInfo.imageLinks}} {{thumbnail}} {{/with}}" alt="Book Cover">
                <div class="card-body">
                    <h4 class="card-title text-center">{{ volumeInfo.title }}</h4>
                    <p class="card-text">Author: {{#each volumeInfo.authors}} {{ this }} {{/each}}</p>
                    <p class="card-text">Published Date: {{ volumeInfo.publishedDate }}</p>
                    <p class="card-text">Pages: {{ volumeInfo.pageCount }}</p>
                    <form action="/books/create" method="POST">
                        <input type="text" class="d-none" name="id" value="{{book.id}}">
                        <button type="submit" class="btn btn-lg btn-block">ADD BOOK</button>
                    </form>
                </div>
            </div>
        {{/each}}
    </div>
{{/if}}