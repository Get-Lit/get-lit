<div class="container">
    <div class="row d-flex justify-content-center align-items-center mt-3 mb-3">
        <h5>Can't find your book?</h5>
        <a class="btn w-25" href="/books/create">ADD NEW BOOK</a>
    </div>
    <div class="row d-flex justify-content-around mb-3">
        {{#each books as |book|}}
        <div class="card book-card p-2">
            <div class="card-img">
                <img src="{{book.cover}}" alt="Book cover">
            </div>
            <div class="card-body">
                <div class="title-and-like">
                    <h4 class="card-title">{{ book.title }}</h4>
                    {{#if ../currentUser}}
                        <button class="like-button border-0">
                            <i 
                                data-id="{{book.id}}"
                                class="like-action fa fa-heart {{#userLikedBook likes=../likes book=book}}icon-liked{{/userLikedBook}}"
                            >

                            </i>
                        </button>
                    {{/if}}
                <p class="card-text">{{ book.author }}</p>
                </div>
                <div class="book-card-btns">
                    <a href="/books/{{book._id}}" class="btn mt-auto">SEE MORE</a>
                    <a href="/books/{{book._id}}/rooms" class="btn mt-1">VISIT ROOMS</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/axios.js"></script>