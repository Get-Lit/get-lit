<div class="container div-flex-row justify-content-around form-page">

     <div class="form-image">
         <h2>We care about your opinion. Feel free to share your thoughts, suggestions or issues with us!</h2>
         <img src="/img/contact_us.svg" alt="Contact us icon">
     </div>   

    <div class="signup-form">
        <form action="/contact" method="post">
            <h2>Contact us</h2>
            <div class="form-group">
                <input type="text" class="form-control {{#if errors.name}}is-invalid{{/if}}" name="name" placeholder="Name"  required="required" value="{{user.name}}">
                {{#if errors.name}} <div class="invalid-feedback">{{errors.name}}</div>{{/if}}
            </div>
            <div class="form-group">
                <input type="email" class="form-control {{#if errors.email}}is-invalid{{/if}}" name="email" placeholder="Email" required="required" value="{{user.email}}">
                {{#if errors.email}} <div class="invalid-feedback">{{errors.email}}</div>{{/if}}
            </div>
            <div class="form-group">
                <textarea cols="30" rows="10" class="form-control {{#if errors.email}}is-invalid{{/if}}" name="message" placeholder="Message" required="required"></textarea>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-block">Send</button>
            </div>
        </form>
    </div>

</div>