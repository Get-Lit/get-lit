<div class="mt-5 container">
    <div>
        <h2>{{ room.name }}</h2>
        <p>{{ room.description }}</p>
    </div>

{{!-- Crear un nuevo comentario --}}
    <div class="d-flex flex-row mt-4 mb-4">
        <img src="https://simulacionymedicina.es/wp-content/uploads/2015/11/default-avatar-300x300-1.jpg" width="40">
        <form action="/comment/{{room._id}}" method="POST">
            <input type="text" name="content" class="form-control" placeholder="Add comment">
            <button class="btn w-25" type="submit">Comment</button>
        </form>
    </div>

{{!-- Mostrar los comentarios que tiene la sala --}}
    {{#each room.comments as |comment|}}    
    <div class="card w-75" id="room-card">
        <div class="card-body">
            <div class="d-flex flex-direction-column">
                <img src="https://simulacionymedicina.es/wp-content/uploads/2015/11/default-avatar-300x300-1.jpg" alt="User's picture" width="50">
                <h4 class="card-title title-link m-3">{{comment.user}}<h4>
            </div>
            <p>{{comment.content}}</p>
        </div>
        <div class="bg-light p-2">
            <h5 class="mt-3">Reply</h5>
            <div>
                <img src="" width="40">
                <textarea class="form-control ml-1 shadow-none textarea"></textarea>
            </div>

            <div class="mt-3 d-flex justify-content-around">
                <button class="btn w-25" type="button">Reply</button>
                <button class="btn w-25" type="button">Cancel</button>
            </div>
        </div>
    </div>
    {{/each}}




</div>