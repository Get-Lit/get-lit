<h1>Sign up</h1>

<div class="signup-form">
    <form action="/signup" method="post">
		<h2>Sign up</h2>
		<p class="hint-text">Create your account. It's free and only takes a minute.</p>
        <div class="form-group">
        	<input type="text" class="form-control {{#if errors.name}}is-invalid{{/if}}" name="name" placeholder="Name"  required="required" value="{{user.name}}">
            {{#if errors.name}} <div class="invalid-feedback">{{errors.name}}</div>{{/if}}
        </div>
        <div class="form-group">
        	<input type="email" class="form-control {{#if errors.email}}is-invalid{{/if}}" name="email" placeholder="Email" required="required" value="{{user.email}}">
            {{#if errors.email}} <div class="invalid-feedback">{{errors.email}}</div>{{/if}}
        </div>
		<div class="form-group">
            <input type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" name="password" placeholder="Password" required="required">
            {{#if errors.password}}<div class="invalid-feedback">{{errors.password}}</div>{{/if}}
        </div>
		{{!-- <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" required="required">
        </div>         --}}
        <div class="form-group">
			<label class="form-check-label"><input type="checkbox" required="required"> I accept the <a href="#">Terms of Use</a> &amp; <a href="#">Privacy Policy</a></label>
		</div>
		<div class="form-group">
            <button type="submit" class="btn btn-success btn-lg btn-block">Sign Up Now</button>
        </div>
    </form>
	<div class="text-center">Already have an account? <a href="#">Log in</a></div>
</div>