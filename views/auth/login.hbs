<div class="signup-form mb-5">
    <form action="/login" method="POST">
		<h2>Log in</h2>
		<p class="hint-text">Inicia sesi√≥n en Get Lit</p>
        <div class="form-group">
        	<input type="email" class="form-control {{#if errors.email}}is-invalid{{/if}}" name="email" placeholder="Email" required="required" value="{{user.email}}">
        </div>
		<div class="form-group">
            <input type="password" class="form-control {{#if errors.email}}is-invalid{{/if}}" name="password" placeholder="Password" required="required">
            {{#if errors.email}} <div class="invalid-feedback">{{errors.email}}</div>{{/if}}
        </div>
		{{!-- <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" required="required">
        </div>         --}}
		<div class="form-group signup-btn-div">
            <button type="submit" class="btn btn-lg btn-block">Log In</button>
        </div>
    </form>
</div>